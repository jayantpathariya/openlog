{
  "name": "@openlog/winston",
  "version": "0.1.0",
  "description": "Winston transport for OpenLog - send structured logs to your self-hosted logging platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": [
    "openlog",
    "winston",
    "logging",
    "transport",
    "nodejs"
  ],
  "author": "Jayant Pathariya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jayantpathariya/openlog",
    "directory": "packages/sdk-winston"
  },
  "peerDependencies": {
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
